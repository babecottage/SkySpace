---
import Card from "./Card.astro";

export interface Props {
  displayName?: string;
  avatar?: string;
  description?: string;
}

const { displayName, avatar, description } = Astro.props;
---

<Card>
  <h1 class="font-bold text-xl mb-3">{displayName}</h1>
  <div class="grid grid-cols-2 gap-2">
    <img class="w-full" src={avatar} />
    <p class="text-sm">{description}</p>
  </div>
</Card>
